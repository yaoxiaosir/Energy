<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
  <FrameLayout
      android:id="@+id/title_bg"
      android:layout_width="match_parent"
      android:layout_height="@dimen/title_bar_height"
      android:background="@color/bg_title_bar"
      android:alpha="0"
      />
  <RelativeLayout
      android:id="@+id/title_bar"
      android:layout_width="match_parent"
      android:layout_height="@dimen/title_bar_height"
      android:background="@android:color/transparent"
      android:paddingLeft="@dimen/margin_medium"
      android:paddingRight="@dimen/margin_medium"
      >

    <Button
        android:id="@+id/title_bar_subtitle_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:textColor="@color/font_color_white"
        android:textSize="@dimen/font_size_large"
        android:visibility="gone"
        tools:text="subTitle"
        tools:visibility="visible"
        />

    <ImageView
        android:id="@+id/title_bar_btn_left"
        android:layout_width="@dimen/title_bar_height"
        android:layout_height="@dimen/title_bar_height"
        android:layout_alignParentLeft="true"
        android:contentDescription="@null"
        android:scaleType="center"
        android:visibility="gone"
        />

    <RelativeLayout
        android:id="@+id/user_avatar_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:visibility="gone"
        tools:visibility="visible"
        >
      <com.facebook.drawee.view.SimpleDraweeView
          android:id="@+id/user_avatar"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:padding="5dp"
          android:src="@mipmap/ic_launcher"
          app:roundAsCircle="true"
          app:roundingBorderColor="#959595"
          app:roundingBorderWidth="1dp"
          />

      <ImageView
          android:id="@+id/status_new_msg"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignRight="@id/user_avatar"
          android:layout_marginLeft="3dp"
          android:visibility="gone"
          tools:visibility="visible"
          />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/title_bar_operation_layout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/title_bar_height"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:orientation="horizontal"
        android:visibility="visible"
        tools:ignore="UseCompoundDrawables"
        tools:visibility="visible"
        >

      <TextView
          android:id="@+id/title_bar_btn_right_text"
          android:layout_width="wrap_content"
          android:layout_height="@dimen/title_bar_height"
          android:gravity="center"
          android:minWidth="@dimen/title_bar_height"
          android:paddingLeft="@dimen/margin_medium"
          android:paddingRight="@dimen/margin_medium"
          android:textColor="@color/font_color_white"
          android:visibility="gone"
          tools:text="Right"
          tools:visibility="visible"
          />

      <ImageView
          android:id="@+id/title_bar_btn_right_img"
          android:layout_width="@dimen/title_bar_height"
          android:layout_height="@dimen/title_bar_height"
          android:contentDescription="@null"
          android:scaleType="center"
          android:visibility="gone"
          tools:visibility="visible"
          />
    </LinearLayout>

    <TextView
        android:id="@+id/title_bar_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="@dimen/font_size_xlarge"
        tools:text="@string/app_name"
        style="@style/Widget.App.TextView.Large.White"
        />

  </RelativeLayout>
</FrameLayout>
